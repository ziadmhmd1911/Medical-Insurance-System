<Window x:Class="ZIASystem.Views.EmployerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZIASystem.Views"
        mc:Ignorable="d"
        Title="EmployerWindow" Height="450" Width="800" Background="#F3F3F3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#333333">
            <Button x:Name="showRecBtn" Content="Show Record" Click="showRecBtn_Click" HorizontalAlignment="Left" Margin="20,40,0,0" VerticalAlignment="Top" Width="110" Height="40" Background="#FFC107" Foreground="White"/>
            <Button x:Name="reserve_btn" Content="Reserve" Click="reserve_btn_Click" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="110" Height="40" Background="#FFC107" Foreground="White"/>
            <Button x:Name="viewReport_btn" Content="View Report" Click="viewReport_btn_Click" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Width="110" Height="40" Background="#FFC107" Foreground="White"/>

        </Grid>
        <Grid x:Name="view_grid" Grid.Column="1">

        </Grid>
    </Grid>
</Window>
