<UserControl x:Class="ZIASystem.Views.UserControls.AdminDayRecords"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZIASystem.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"
             >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="view_btn" Grid.Row="0">
            <DatePicker x:Name="DatePick" HorizontalAlignment="Left" Margin="132,16,0,0" VerticalAlignment="Top"/>
            <Button Content="View" Click="Button_Click" HorizontalAlignment="Left" Margin="421,27,0,0" VerticalAlignment="Top" Width="87" Height="51"/>

        </Grid>

        <Grid Grid.Row="1">
            <DataGrid x:Name="DGrid" HorizontalAlignment="Left" Height="318" Margin="10,10,0,0" VerticalAlignment="Top" Width="780"/>

        </Grid>
    </Grid>
</UserControl>
